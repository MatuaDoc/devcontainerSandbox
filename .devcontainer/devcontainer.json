{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "customizations": {
        "codespaces": {
            "openFiles": [ // Which file(s) to open by default
            "index.html"
            ]
        },
        "vscode": {
            "extensions": [
                "ritwickdey.LiveServer",  //  Install LiveServer to view pages
                "vsls-contrib.gitdoc"	// BROKEN Install GitDoc
            ],
            "settings": {
                "editor.fontSize": 26,
                "gitdoc.enabled": true,
                "files.exclude": {
                   ".*": true
                }
            }
        }
    }
}
