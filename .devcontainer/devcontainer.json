{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "customizations": {
        "codespaces": {
            "openFiles": [ // Which file(s) to open by default
            "index.html"
            ]
        },
        "vscode": {
            "extensions": [
                "ritwickdey.LiveServer",  //  Install LiveServer to view pages
                "vsls-contrib.gitdoc"	// BROKEN Install GitDoc
            ],
            "settings":{
                "postAttachCommand": "workbench.action.togglePanel"
                "liveServer.settings.donotShowInfoMsg": true, // not working
                "gitdoc.commitValidationLevel": "none",
                "gitdoc.enabled": true,
                "files.exclude": {
                    ".*": true,
                    "README.md": true,
                },
                "editor.fontSize": 26, //DIAGNOSTIC
        }
    }
}
